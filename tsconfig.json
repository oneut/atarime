{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "es2017",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "setupTests.ts",
    "jest.config.js",
    "examples",
    "docs",
    "coverage"
  ]
}